<div>
  <%= flash[:notice] %>
</div>

<main>
 <p id="notice">Welcome! You have signed up successfully.</p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr>
          <% image_path="default-image.jpg" %>
          <%= image_tag image_path %> 
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <%= form_with model: @user do |f| %>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
          <% end %>
        </tr>
      </table>
      <div class="row">
       <a class="btn btn-outline-secondary btn-block edit_user_185709" href="/users/185709/edit">
         <svg class="svg-inline--fa fa-user-gear" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="user-gear" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" data-fa-i2svg=""></svg>
       </a>
      </div>
       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
        <h4>Book</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        
        <%= f.submit "Create Book" %>
       <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
             <th></th>
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
         <tr>
          <td></td>
          <td><%= user.profile_image %></td>
          <td><%= user.name %></td>
          <td><a class= "show" href= "<%= user_path(user) %>">Show</a></td>
         </tr>
         <% end %>          
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>