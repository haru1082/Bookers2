<main>
 <p id="notice">Welcome! You have signed up successfully.</p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr>
          <% image_path="default-image.jpg" %>
          <%= image_tag image_path %> 
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th> </th>
        </tr>
      </table>
      <div class="row">
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      </div>
       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book do |f| %>
        <h4>Book</h4>
        <% f.text_field :shop_name %>
       <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= @books.each do |book| %>
        <p>title</p>
        <span><%= book.title %></span>
      <% end %>
      <table class="table table-hover table-inverse">
        <thead>
            <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
            </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>
</main>