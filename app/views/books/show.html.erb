<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <%= form_with model: @user do |f| %>
           <th>introduction</th>
           <th><%= @book.user.introduction %></th>
          <% end %>
        </tr>
      </table>
      <div class="row">
       <%= link_to edit_user_path(@book.user),class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
       <% end %>
      </div>
       <h2 class="mt-3">New book</h2>
       <%= form_with model: @new_book do |f| %>
        <h4>Book</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit "Create Book" %>
       <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
         <tr>
          <td></td>
          <td><%= image_tag @book.user.get_profile_image(80,80) %><br><%= link_to @book.user.name, user_path(@book) %></td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book) %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete %></td>
          <% end %>
         </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>