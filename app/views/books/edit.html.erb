
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

 <h1>Eding Book</h1>
 <%= form_with model: @book do |f| %>
   <label for = "inputName">Title</label></br>
   <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "Name" %></br>
   <label for = "inputBody">Opinion</label></br>
   <%= f.text_field :body, autofocus: true, id: "inputBody", placeholder: "Opinion" %></br>

   <%= f.submit "Update Book" %>
  <% end %>
</div>